<%= render 'partial/navbar' %>
<div class="container">
    <div class="col-md-3">
        <!-- vertical-navbar -->
        <%= render 'partial/verticalnavbar2'%>
    </div>
    <div class="col-md-9">
        <div class="panel panel-default">
          <div class="panel-heading">
              <div class="text-center">
                  <span style="font-size:24px;">基本データの編集</span>
              </div>
          </div>

          <div class="panel-body">			
					<!-- ここからフォーム -->
					<%= form_for @person do |f| %>
						<div class="row">
							<div class="col-md-12 select">
								<div class="form-group">
									<label>希望ジャンル</label>
									<%= f.select :item_type, [["飲食・カフェ","飲食・カフェ"], ["飲食・その他","飲食・その他"], ["物販・食品","物販・食品"], ["物販・服飾雑貨","物販・服飾雑貨"], ["物販・その他","物販・その他"], ["サービス業","サービス業"], ["その他","その他"]], {prompt:"選択してください"}, {required: 'true', autofocus: 'true', class: 'form-control'} %>
								</div>
							</div>
						</div>
						<br>

						<div class="row">
							<div class="col-md-12 select">
								<div class="form-group">
									<label>希望スペース</label>
									<%= f.select :shop_type, [["1階路面スペース","1階路面スペース"], ["地下・2階以上スペース","地下・2階以上スペース"], ["屋外スペース","屋外スペース"], ["その他","その他"]], {prompt:"選択してください"}, {required: 'true', autofocus: 'true', class: 'form-control'} %>
								</div>
							</div>
						</div>
						<br>

						<div class="row">
							<div class="col-md-12 select">
								<div class="form-group">
									<label>希望の広さ</label>
									<%= f.select :shop_size, [["10㎡未満","10㎡未満"], ["10~25㎡程度","10~25㎡程度"], ["25~50㎡程度","25~50㎡程度"], ["50㎡以上","50㎡以上"]], {prompt:"選択してください"}, {required: 'true', autofocus: 'true', class: 'form-control'} %>
								</div>
							</div>
						</div>
						<br>

                  <div class="actions">
                      <%= f.submit "更新", class: "btn btn-danger" %>
                  </div>
              <% end %>
          </div>
      </div>
  </div>
</div>